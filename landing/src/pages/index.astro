---
import MainButton from "@components/Buttons/MainButton.astro";
import Layout from "../layouts/Layout.astro";
import Header from "@components/Header/Header.astro";
import AboutUS from "@components/Sections/AboutUS.astro";
import Services from "@components/Sections/Services.astro";
import Promotion from "@components/Sections/Promotion.astro";
import Map from "@components/Map/Map.astro";
import Feedback from "@components/Sections/Feedback.astro";
import Footer from "@components/Footer/Footer.astro";

export const prerender = true;
---

<Layout
  title="Автосервис - RemZona || Мариупаль"
  description="Лучший автосервис в городе Мариуполь.. В RemZona выполняются все виды работаи и используется новейшее оборудывание, что позволяет добится качественной и быстрой работы"
>
  <main>
    <section id="main__section">
      <Header />
      <div class="main__content flex flex-col items-center gap-9">
        <img
          src="title.svg"
          alt="Логотип для заголовка"
          loading="eager"
          decoding="async"
          class="w-[568px] h-[57px]"
        />
        <p class="description">Делаем качественно, быстро и с душой</p>
        <MainButton content="Оставить заявку" />
      </div>
    </section>
    <AboutUS />
    <Services />
    <Promotion />
    <Feedback />
    <Map />
    <Footer />
  </main>
</Layout>

<style lang="scss">
  main {
    font-family: var(--font-family);
    color: #fff3f3;
  }

  #main__section {
    background-image: url("/main-backgound.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: 820px;
  }

  @media (min-width: 1500px) {
    #main__section {
      background-size: cover;
      height: 100vh;
    }
  }

  .main__content {
    width: max-content;
    margin: 0 auto;
    margin-top: 89px;
    margin-bottom: 69px;
  }

  .description {
    font-weight: 400;
    font-size: 16px;
    line-height: 140%;
    text-align: right;
    color: #fff3f3;
  }
</style>
