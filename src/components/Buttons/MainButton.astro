---
interface Props {
  content: string;
  style?: string;
  w?: string;
  h?: string;
}

const { content, style, w, h } = Astro.props;
---

<button class={style} style={`width: ${w}px; height: ${h}px;`}>
  {content}
</button>

<style lang="scss">
  button {
    width: 250px;
    height: 51px;

    background-color: #d02a35;
    box-shadow: 0 0 30px 0 rgba(242, 109, 109, 0.4);
    border-radius: 5px;
  }
</style>
