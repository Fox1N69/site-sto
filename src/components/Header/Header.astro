---
import { Image } from "astro:assets";
import "./header.scss";
import srcLogo from "public/logo.svg";
import underline from "public/underline-nav.png";
---

<header class="h-90 flex justify-between p-30">
  <img src="logo.svg" alt="" decoding="async" loading="eager" />
  <nav class="nav__menu flex flex-col gap-[30px]">
    <ul class="menu__list flex flex-row gap-[12%] justify-center">
      <li class="menu-item"><a href="#">О нас</a></li>
      <li class="menu-item"><a href="#">Услуги</a></li>
      <li class="menu-item"><a href="#">Акции</a></li>
      <li class="menu-item"><a href="#">Контакты</a></li>
    </ul>
    <Image
      src={underline}
      alt={"Изображение линии подчеркивающей линии навигацию сайта"}
      loading={"eager"}
    />
  </nav>
  <div class="info">
    <div class="info-number">8-908-875-53-47</div>
    <div class="info-time">9.00-20.00 пн-вс</div>
  </div>
</header>

<style lang="scss" scoped>
  header {
    color: #fff3f3;
  }

