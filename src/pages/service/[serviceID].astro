---
import Layout from "@layouts/Layout.astro";
import { services } from "@components/MoreServices/data";
import Header from "@components/Header/Header.astro";
import CardList from "@components/MoreServices/CardList";

const { serviceID } = Astro.params;
const service = services.find((s) => s.serviceID === serviceID);

export async function getStaticPaths() {
  return services.map((service) => ({
    params: { serviceID: service.serviceID },
  }));
}
---

<Layout
  title="Услуги автосервиса в Мариуполе: все виды работы - RemZona"
  description="Познакомьтесь с полным списком услуг автосервиса RemZona в Мариуполе. Мы предлагаем широкий спектр услуг, используя новейшее оборудование для быстрой и качественной работы"
>
  <Header />
  <h1>Все Услуги</h1>
  <main class="main__service">
    <CardList selectedServiceID={serviceID} />
    {
      service ? (
        <div class="service-detail">
          <h2>{service.title}</h2>
          <p>{service.description}</p>
          <p>Цена: {service.price}</p>
        </div>
      ) : (
        <div class="service-not-found">
          <h2>Услуга не найдена</h2>
          <p>К сожалению, услуга с указанным идентификатором не найдена.</p>
        </div>
      )
    }
  </main>
</Layout>

<style lang="scss" scoped>
  h1 {
    margin-top: 50px;
    color: white;
    font-family: var(--font-family);
    font-size: 30px;
    text-align: center;
  }
  .main__service {
    margin-top: 50px;
    color: white;
    padding: 0 30px;
    display: flex;
    gap: 30px;
  }
</style>
